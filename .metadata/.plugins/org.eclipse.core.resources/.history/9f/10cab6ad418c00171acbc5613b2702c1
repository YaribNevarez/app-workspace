#ifndef PERFTOOL_HPP_
#define PERFTOOL_HPP_

#include "ctrlapp/src/ctrlapp.hpp"

class PerformanceTool: protected ControlApp
{
public:
	PerformanceTool();
	~PerformanceTool();

	int run(void);

protected:
	typedef enum
	{
		SERVER
	} ProcessID;

	int run(ProcessID);

	virtual int server(void);

	ProcessTrigger * serverProcess;
};



#endif /* PERFTOOL_HPP_ */
