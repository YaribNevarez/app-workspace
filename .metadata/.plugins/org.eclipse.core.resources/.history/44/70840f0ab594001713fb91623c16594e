#ifndef ZYBO_HPP_
#define ZYBO_HPP_


#include "devicehandler.hpp"

namespace ZYBO
{
	namespace DRIVER
	{
		const char * const BTN  = "/proc/zynq_btn";
		const char * const LED  = "/proc/zynq_led";
		const char * const SW   = "/proc/zynq_sw";
		const char * const PMOD = "/proc/zynq_pmod";
	}

	namespace HANDLER
	{
		const DeviceHandler BUTTONS(DRIVER::BTN);
		const DeviceHandler LEDS(DRIVER::LED);
		const DeviceHandler SWITCHES(DRIVER::SW);
		const DeviceHandler PMOD(DRIVER::PMOD);
	}
}

#endif /* ZYBO_HPP_ */
