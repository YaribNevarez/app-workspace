#include "joystick.hpp"


Joystick::Joystick(char * file_name):
	file_name(file_name),
	file_descriptor(-1),
	axis(NULL),
	buttons(NULL)
{
}

bool Joystick::open(void)
{
	file_descriptor = open(file_name.c_str(), O_RDONLY);
	bool (file_descriptor) != -1;
}

bool Joystick::isOpen(void)
{
	return file_descriptor != -1;
}

