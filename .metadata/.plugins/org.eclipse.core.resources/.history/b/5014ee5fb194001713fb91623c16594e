#ifndef ZYBO_HPP_
#define ZYBO_HPP_


#include "devicehandler.hpp"

namespace Zybo
{
	const char * const ZYNQ_BTN_FILE  = "/proc/zynq_btn";
	const char * const ZYNQ_LED_FILE  = "/proc/zynq_led";
	const char * const ZYNQ_SW_FILE   = "/proc/zynq_sw";
	const char * const ZYNQ_PMOD_FILE = "/proc/zynq_pmod";

	namespace Handler
	{
		DeviceHandler BUTTON(ZYNQ_BTN_FILE);
		DeviceHandler LED(ZYNQ_LED_FILE);
		DeviceHandler SWITCH(ZYNQ_SW_FILE);
		DeviceHandler PMOD(ZYNQ_PMOD_FILE);
	}
}

#endif /* ZYBO_HPP_ */
