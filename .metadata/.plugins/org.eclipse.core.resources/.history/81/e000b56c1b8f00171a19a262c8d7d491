#ifndef DEVICEID_HPP_
#define DEVICEID_HPP_

#ifdef __cplusplus
extern "C" {
#endif

#include "iodef.hpp"

enum
{
	DEVICE_ID_BEGIN = 0,
	LEVELSENSOR_0,
	LEVELSENSOR_1,
	WASTETLEVEL,
	LEAKSENSOR_0,
	LEAKSENSOR_1,
	IRSENSOR,
	FLUSHVALVE,
	DRAINVALVE,
	SHUTOFFVALVE,
	DRAINLOCAL,
	EMERGENCY,
	APPSELECTION,
	DRAINDELAY,
	VACUMGEN,
	DRAININDICATOR,
	LEAKINDICATOR,
	PWM_0,
	PWM_1,
	RELAY_0,
	RELAY_1,
	DEVICE_ID_END
};

typedef struct
{
	DeviceID ID;
	const char name[] = "10";
} DeviceIdentity;

#ifdef __cplusplus
}
#endif

#endif /* DEVICEID_HPP_ */
