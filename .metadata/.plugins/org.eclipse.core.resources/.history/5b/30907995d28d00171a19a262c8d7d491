#ifndef SYSTOOL_HPP_
#define SYSTOOL_HPP_

#include "framework/systembox.hpp"

class SystemTool: protected SystemFeature
{
public:
	SystemTool();
	~SystemTool();

	virtual int run(void);

protected:
	int server_socket;
	int client_socket;
	struct sockaddr_in server_address;
	struct sockaddr_in client_address;
};

#endif /* SYSTOOL_HPP_ */
