#ifndef ZYBO_HPP_
#define ZYBO_HPP_


#include "devicehandler.hpp"

namespace Zybo
{
	namespace Module
	{
		const char * const BTN  = "/proc/zynq_btn";
		const char * const LED  = "/proc/zynq_led";
		const char * const SW   = "/proc/zynq_sw";
		const char * const PMOD = "/proc/zynq_pmod";
	}

	namespace Handler
	{
		DeviceHandler BUTTONS(ZYNQ_BTN_FILE);
		DeviceHandler LEDS(ZYNQ_LED_FILE);
		DeviceHandler SWITCHES(ZYNQ_SW_FILE);
		DeviceHandler PMOD(ZYNQ_PMOD_FILE);
	}
}

#endif /* ZYBO_HPP_ */
